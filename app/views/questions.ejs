<%- include('partials/header') %>

        <nav aria-label="breadcrumb" style="--bs-breadcrumb-divider: '>';">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active">Toutes les questions</li>
            </ol>
        </nav>

        <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
            <h2 class="h1 display-4">Toutes les questions</h2>

            <div>
                <table class="text-left admin-users">
                    <tr>
                        <th>id</th>
                        <th>question</th>
                        <th>level</th>
                    </tr>
                    <% for( let question of questions ) { %>

                        <tr>
                            <td><%= question.id %></td>
                            <td><a href="/admin/question/<%= question.id %>"><%= question.question %></a></td>
                            <td><%= question.level.name %></td>
                        </tr>

                    <% } %>
                </table>
            </div>

        </div>

<%- include('partials/footer') %>