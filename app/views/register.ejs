<%- include('partials/header') %>

    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h2 class="h1 display-4">Inscription</h2>
    </div>
    
    <form action="/register" method="POST" class="card col-lg-6 offset-lg-3 shadow-sm mb-5">

        <div class="card-body">

            <div class="mb-3">
                <label for="firstname" class="form-label">Prénom</label>
                <input type="text" class="form-control" name="firstname" placeholder="Georges"
                <% if (typeof(data) !== 'undefined') { %>value="<%= data.firstname %>"<% } %>>   
            </div>

            <div class="mb-3">
                <label for="lastname" class="form-label">Nom</label>
                <input type="text" class="form-control" name="lastname" placeholder="Orwell"
                <% if (typeof(data) !== 'undefined') { %>value="<%= data.lastname %>"<% } %>>
            </div>

            <div class="mb-3<% if (errors.find(error => error.input === 'email')) { %> error<% } %>">
                <label for="email" class="form-label">E-mail</label>
                <% if (errors.find(error => error.input === 'email')) { %> <span class="alert alert-danger"><%= errors.find(error => error.input === 'email').message  %></span> <% } %>
                <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" placeholder="g.orwell@gmail.com"
                <% if (typeof(data) !== 'undefined') { %>value="<%= data.email %>"<% } %>>
            </div>

            <div class="mb-3<% if (errors.find(error => error.input === 'password')) { %> error<% } %>">
                <label for="password" class="form-label">Mot de passe</label>
                <% if (errors.find(error => error.input === 'password')) { %> <span class="alert alert-danger"><%= errors.find(error => error.input === 'password').message  %></span> <% } %>
                <input type="password" class="form-control" name="password" id="password">
            </div>

            <div class="mb-3<% if (errors.find(error => error.input === 'password')) { %> error<% } %>">
                <label for="password2" class="form-label">vérification Mot de passe</label>
                <input type="password" class="form-control" name="password2" id="password2">
            </div>

            <div class="float-md-end">
                <button type="submit" class="btn btn-primary">Je m'inscris</button>
            </div>
            

        </div>
    </form>



<%- include('partials/footer') %>